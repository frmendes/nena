.container
  h1 style=("text-align: left")  Edit Organization
  .row
    .col-lg-8
      = form_for @organization, url: organization_path, html: { multipart: true } do |f|
        .form-group
          = f.file_field :avatar
          br
          img src=@organization.avatar; width="300"
          br
          = f.label :name 
          br
          = f.text_field :name, class: "form-control",  placeholder: "Enter new name"
          br
          = f.label :description
          br
          = f.text_field :description, class: "form-control",  placeholder: "Enter new description"
          br
          = f.submit "ok", class: "btn btn-primary"